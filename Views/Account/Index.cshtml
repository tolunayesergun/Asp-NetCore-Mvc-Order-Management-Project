@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Extensions
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Giriş Sayfası </title>

    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/vendors/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="~/build/css/custom.min.css" rel="stylesheet">
</head>

@{
    /*
    string Demo = Context.Session.GetString("Demo");
    @Demo
    */
}

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-@TempData["InfoType"]">
                <strong>@TempData["Info"]</strong>
            </div>
        }
       
        <div class="login_wrapper">

            <div class="animate form login_form">
                <section class="login_content">
                    <img src="~/images/MainLogo.png" style="width:55%; margin-bottom:10%">
                    @using (Html.BeginForm("LoginPost", "Account", FormMethod.Post, new { }))
                    {
                        <h1>Giriş</h1>
                        <div>
                            <input type="email" name="userMail" class="form-control" placeholder="Mail" required="" />
                        </div>
                        <div>
                            <input type="password" name="userPassword" class="form-control" placeholder="Şifre" required="" />
                        </div>

                        <button type="submit" class="btn-block btn btn-dark">Giriş Yap</button>

                        <br>


                        <div class="clearfix"></div>
                        <br>
                        <div class="separator">
                            <br>
                            <p class="change_link">
                                <a href="#signup" class="to_register"> Hesap Oluştur </a>
                            </p>

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1>Talep Yönetim Portalı</h1>
                           
                            </div>
                        </div>
                    }
                </section>
            </div>

            <div id="register" class="animate form registration_form">
                <section class="login_content">

                    @using (Html.BeginForm("RegisterPost", "Account", FormMethod.Post, new { }))
                    {
                        <h1>Hesap Oluştur</h1>
                        <div>
                            <input type="text" name="userName" class="form-control" placeholder="Ad" required="" />
                        </div>
                        <div>
                            <input type="text" name="userSurname" class="form-control" placeholder="Soyad" required="" />
                        </div>
                        <div>
                            <input type="email" name="userMail" class="form-control" placeholder="Mail" required="" />
                        </div>
                        <div>
                            <input type="email" name="REuserMail" class="form-control" placeholder="Mail Tekrar" required="" />
                        </div>
                        <div>
                            <input type="password" name="userPassword" class="form-control" placeholder="Şifre" required="" />
                        </div>
                        <div>
                            <input type="password" name="REuserPassword" class="form-control" placeholder="Şifre Tekrar" required="" />
                        </div>
                        <div>
                            <button type="submit" class="btn-block btn btn-dark">Kayıt Ol</button>
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">
                                Zaten üye misin ?
                                <a href="#signin" class="to_register"> Giriş Yap </a>
                            </p>

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1>Talep Yönetim Portalı</h1>
                           
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</body>
</html>